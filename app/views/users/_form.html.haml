= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :twitter_uid
    = f.text_field :twitter_uid
  .field
    = f.label :avatar_url
    = f.text_field :avatar_url
  .actions
    = f.submit 'Save'
